{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:react/recommended", "plugin:flowtype/recommended"],
  "rules": {
    "semi": ["error", "always"]
  },
  "settings": {
    "react": {
      "version": "detected"
    }
  }
}
